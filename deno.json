{
  "compilerOptions": {
    "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": false
  },
  "fmt": {
    "files": {
      "exclude": [
        ".git",
        "cov"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        ".git",
        "cov"
      ]
    }
  },
  "tasks": {
    "test": "deno test --doc --unstable --allow-all --coverage=./cov"
  }
}
